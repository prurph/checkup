<div class="col-xs-12">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-inline' }) do |f| %>
    <div class="form-container">
      <h1>CheckUp</h1>
      <h4>Lightweight Mobile Metrics</h4>
      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
      <%= f.password_field :password, class: 'form-control',
      placeholder: "Password" %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm Password" %>
    </div>
  <%= f.submit "Sign up!", class: 'btn btn-info form-control' %>
  <%= link_to "Already registered? Sign in!", new_user_session_path, class:
        'devise-link' %>
  <% end %>
  <%= devise_error_messages! %>
</div>
